#!/bin/sh

set -eu

mkdir -p /var/log/puavo/puppet
env LC_CTYPE=en_US.UTF-8 puppet apply               \
    --detailed-exitcodes                            \
    --logdest console                               \
    --logdest /var/log/puavo/puppet/apply-rules.log \
    --modulepath rules                              \
    rules/site.pp \
  || [ $? -eq 2 ]
