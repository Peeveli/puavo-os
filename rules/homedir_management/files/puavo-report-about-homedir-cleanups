#!/bin/sh

set -eu

# no homedir cleanups (or reports) on netboot devices
[ -e /run/puavo/nbd-server ] && exit 0

[ -n "${GUEST_SESSION:-}" ] && exit 0

if [ "$(puavo-conf puavo.admin.cleanup.homedirs.ensure_free_space)" != 'true' ]; then
  exit 0
fi

if [ "$(puavo-conf puavo.admin.personally_administered)" = 'true' ]; then
  exit 0
fi

case "$LANG" in
  de*)
    summary='AUTOMATISCHES LÖSCHEN VON DATEIEN'
    body='Die Dateien auf dem Computer werden möglicherweise automatisch gelöscht, da der Computer nur über wenig Speicherplatz verfügt.'
    ;;
  fi*)
    summary='AUTOMAATTINEN TIEDOSTOJEN POISTO'
    body='Tämän tietokoneen tiedostoja voidaan poistaa automaattisesti, koska koneessa on vain vähän levytilaa.'
    ;;
  fr*)
    summary='SUPPRESSION AUTOMATIQUE DES FICHIERS'
    body="Les fichiers de l'ordinateur peuvent être supprimés automatiquement, car l'ordinateur ne dispose que d'une petite quantité d'espace disque."
    ;;
  sv*)
    summary='AUTOMATISK RADERING AV FILER'
    body='Datorfiler kan raderas automatiskt eftersom det bara finns en liten mängd diskutrymme på datorn.'
    ;;
  *)
    summary='AUTOMATIC FILE DELETION'
    body='The files in the computer may be deleted automatically, because the computer has only a small amount of diskspace.'
    ;;
esac

notify-send -i system-devices-panel-alert "$summary" "$body"
