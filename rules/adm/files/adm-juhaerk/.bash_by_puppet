# shell configurations configured by puppet

PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/games:/usr/games"
export PATH

# puavoadmins have a more relaxed umask to facilitate collaboration under
# "/puavo-os"
umask 002

set -o vi
export EDITOR=vim

cat <<'EOF' > ~/.vimrc
highlight ExtraWhitespace ctermbg=darkgreen guibg=lightgreen
match ExtraWhitespace /\s\+$/
set expandtab
set sw=2
EOF
