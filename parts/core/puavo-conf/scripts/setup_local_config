#!/bin/sh

set -eu

# XXX get rid of hosttype handling
[ "$(puavo-conf puavo.hosttype)" = 'laptop' ] || exit 0

[ "$(puavo-conf puavo.admin.personally_administered)" = 'true' ] || exit 0

/usr/sbin/puavo-local-config --admins                \
                             --grub-default          \
                             --networkmanager-policy \
                             --powersave-settings    \
                             --prepare-puavopkg      \
                             --setup-installed-pkgs  \
                             --system-boot
