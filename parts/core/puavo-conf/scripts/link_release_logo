#!/bin/sh

set -eu

# get rid of hosttype handling?
puavo_hosttype=$(puavo-conf puavo.hosttype)

if [ -f "/usr/share/icons/release_logo.${puavo_hosttype}.png" ]; then
  ln -fs "/usr/share/icons/release_logo.${puavo_hosttype}.png" \
         /usr/share/icons/release_logo.png

  mkdir -p /opt/webmenu/styles/theme/default/img
  ln -fs /usr/share/icons/release_logo.png \
         /opt/webmenu/styles/theme/default/img/logo.png
fi
