#!/bin/sh

# Puavo USB stick factory session.  Executed by nodm (see /etc/default/nodm)

set -eu

# Start openbsd-cwm and keep it running
(
  while true; do
    openbsd-cwm || true
    logger -p local0.err -t ers-session \
           'openbsd-cwm has exited or crashed, restarting it...'
    sleep 5
  done
) &

nm-applet &
unclutter -root &

# Disable screen blanking and power saving features
xset s 0 0
xset s off
xset s noblank
xset dpms 0 0 0
xset -dpms

(
  # Start puavo-usb-factory and keep it running
  while true; do
    puavo-manage-ers || true
    logger -p local0.err -t ers-session \
           'The Puavo ERS manage process has exited or crashed, restarting it...'
    sleep 5
  done
)

# We should never get here...
logger -p local0.err -t ers-session \
       'The Puavo ERS manage script is exiting!  This should not happen!'

exit 1
