#!/bin/sh

set -eu

puavo_personally_administered=$(puavo-conf puavo.admin.personally_administered)

puavo_hosttype=$(puavo-conf puavo.hosttype)

if [ "$puavo_hosttype" = 'laptop' \
     -a "$puavo_personally_administered" = 'true' ]; then
  /usr/sbin/puavo-local-config --admins                               \
                               --grub-default                         \
                               --networkmanager-policy                \
                               --powersave-settings                   \
                               --prepare-puavopkg                     \
                               --setup-installed-pkgs                 \
                               --setup-puavo-remote-assistance-applet \
                               --system-boot
fi
